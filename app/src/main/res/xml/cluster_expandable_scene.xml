<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        app:motionInterpolator="easeInOut"
        motion:constraintSetEnd="@id/homeScreenExpandedNormal"
        motion:constraintSetStart="@id/homeScreenMinimized"
        motion:duration="300">

        <OnClick
            app:clickAction="toggle"
            app:targetId="@+id/ivArrow"
            app:visibilityMode="ignore"/>

        <OnSwipe
            app:dragDirection="dragUp"
            app:maxAcceleration="200"
            app:touchAnchorId="@+id/homeCardExpandable"
            app:touchAnchorSide="top" />

    </Transition>

    <ConstraintSet android:id="@+id/homeScreenExpandedNormal">
        <Constraint
            android:id="@id/homeCardExpandable"
            app:visibilityMode="ignore">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homeCardBlock" />
        </Constraint>
        <Constraint
            android:id="@+id/ivArrow"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/homeCardExpandable" />
            <Transform android:rotation="270" />
        </Constraint>
        <Constraint
            android:id="@+id/ivClose"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/homeCardExpandable" />
        </Constraint>
        <Constraint
            android:id="@id/detail"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/ivArrow"
                app:layout_constraintBottom_toBottomOf="@id/homeCardExpandable" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/homeScreenMinimized"
        app:deriveConstraintsFrom="@id/homeScreenExpandedNormal">
        <Constraint
            android:id="@id/homeCardExpandable"
            app:visibilityMode="ignore">
            <Layout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalGuideLine2" />
        </Constraint>
        <Constraint
            android:id="@+id/ivArrow"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/homeCardExpandable" />
            <Transform android:rotation="90" />
        </Constraint>
        <Constraint
            android:id="@+id/ivClose"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/homeCardExpandable" />
        </Constraint>
        <Constraint
            android:id="@id/detail"
            app:visibilityMode="ignore">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/ivArrow"
                app:layout_constraintBottom_toBottomOf="@id/homeCardExpandable" />
        </Constraint>
    </ConstraintSet>
</MotionScene>